<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:background="@drawable/selector_btn_to_blue"
        android:gravity="center"
        android:textColor="@drawable/selector_text_to_white"
        android:textSize="@dimen/dialog_choose_avatar_text_size"
        android:id="@+id/id_tv_camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_choose_avatar_item_height"
        android:text="相机"/>

    <TextView
        android:background="@drawable/selector_btn_to_blue"
        android:gravity="center"
        android:textColor="@drawable/selector_text_to_white"
        android:textSize="@dimen/dialog_choose_avatar_text_size"
        android:id="@+id/id_tv_album"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_choose_avatar_item_height"
        android:text="图库"/>

</LinearLayout>