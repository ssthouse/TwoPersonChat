<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_ll_chat_input_voice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="visible">

    <com.ssthouse.twopersonchat.lib.view.RecordButton
        android:id="@+id/id_btn_record"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:text="按住录音" />

    <Button
        android:id="@+id/id_btn_turn_2_text"
        android:layout_width="@dimen/chat_btn_size"
        android:layout_height="@dimen/chat_btn_size"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/chat_btn_margin"
        android:background="@drawable/chat_btn_keyboard" />

</LinearLayout>