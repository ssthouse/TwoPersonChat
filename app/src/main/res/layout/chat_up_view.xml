<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/id_ll_chat_up_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/id_btn_show_more"
            android:layout_width="@dimen/chat_btn_size"
            android:layout_height="@dimen/chat_btn_size"
            android:layout_margin="@dimen/chat_btn_margin"
            android:background="@drawable/chat_btn_add_selector" />

        <Button
            android:id="@+id/id_btn_show_emotion"
            android:layout_width="@dimen/chat_btn_size"
            android:layout_height="@dimen/chat_btn_size"
            android:layout_margin="@dimen/chat_btn_margin"
            android:background="@drawable/chat_btn_emo_selector"
            android:gravity="center" />

    </LinearLayout>

    <include layout="@layout/chat_up_text"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"/>

    <include layout="@layout/chat_up_voice"/>

</LinearLayout>